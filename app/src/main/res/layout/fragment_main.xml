<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Map -->
                <com.google.android.gms.maps.MapView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--Search-->
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.arlib.floatingsearchview.FloatingSearchView
                        android:id="@+id/floating_search_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:floatingSearch_searchBarMarginLeft="8dp"
                        app:floatingSearch_searchBarMarginTop="?attr/actionBarSize"
                        app:floatingSearch_searchBarMarginRight="8dp"
                        app:floatingSearch_searchHint="Search..."
                        app:floatingSearch_suggestionsListAnimDuration="250"
                        app:floatingSearch_showSearchKey="true"
                        app:floatingSearch_leftActionMode="showSearch"
                        app:floatingSearch_menu="@menu/search"
                        app:floatingSearch_close_search_on_keyboard_dismiss="true"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="?attr/actionBarSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="match_parent"
                            android:background="@color/transparent"
                            android:layout_height="?attr/actionBarSize"/>
                        <View
                            android:layout_width="match_parent"
                            android:background="@color/transparent"
                            android:layout_height="?attr/actionBarSize"/>


                        <Button
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In"
                            android:id="@+id/btnIn" />

                        <Button
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out"
                            android:id="@+id/btnOut" />

                    </LinearLayout>
                </RelativeLayout>

                <!--Float Location And Send-->
                <LinearLayout
                    android:paddingBottom="?attr/actionBarSize"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabLocation"
                        app:fabSize="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gps_fixed"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:backgroundTint="#f9f8f7"
                        android:layout_marginRight="@dimen/fab_margin_right"
                        app:theme="@style/CustomFloatingSearchViewTheme"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabBtn"
                        app:fabSize="normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alert_2"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="16dp"
                        app:theme="@style/CustomFloatingSearchViewTheme.send"
                        android:layout_marginBottom="@dimen/fab_margin_bottom"
                        android:layout_marginRight="@dimen/fab_margin_right"/>


                </LinearLayout>
            </FrameLayout>



        </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ButtonSheet-->
        <LinearLayout
            android:id="@+id/bottomSheetNewsAcidents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:minHeight="300dp"
            android:orientation="vertical"
            app:behavior_peekHeight="110dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <ImageButton
                    android:id="@+id/btnShowMark1"
                    android:text="B2"
                    android:background="@color/bottom_item_type_1"
                    android:src="@drawable/b1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/btnShowMark2"
                    android:text="B2"
                    android:background="@color/bottom_item_type_2"
                    android:src="@drawable/b2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/btnShowMark3"
                    android:text="B3"
                    android:background="@color/bottom_item_type_3"
                    android:src="@drawable/b3"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/btnShowMark4"
                    android:text="B4"
                    android:background="@color/bottom_item_type_4"
                    android:src="@drawable/b4"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/btnShowMark5"
                    android:text="B4"
                    android:background="#ffaaaa"
                    android:src="@drawable/ic_mk2"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sheetTitle"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:text="Slide Up News"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"/>


            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>